---
import { styled as p } from "panda/jsx";
import { Icon } from "./utils/Icon";
import { PlaceHolder } from "./utils/PlaceHolder";
---

<p.div w="100%" bg="orange.100" p="3" display="flex">
  <p.a
    display="flex"
    gap="2"
    justifyContent="center"
    alignItems="center"
    href="/"
  >
    <PlaceHolder client:load>
      <Icon
        icon="material-symbols:filter-vintage"
        size={1.2}
        color="orange.600"
        client:load
      />
    </PlaceHolder>
    <p.p fontSize="2xl" fontWeight="bold" color="orange.600">tpl-astro</p.p>
  </p.a>
  <p.span flex="1" />
  <p.a display="flex" href="https://github.com/wappon28dev/tpl-astro">
    <PlaceHolder client:load>
      <Icon icon="logos:github-icon" size={1.2} client:load />
    </PlaceHolder>
  </p.a>
</p.div>
